{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
	    "php": ">=5.4.0",
		"laravel/framework": "4.2.*",
		"barryvdh/laravel-vendor-cleanup": "1.*",
        "ipsum/core": "1.0.*",
		"ipsum/admin": "1.0.*",
		"ipsum/errors": "1.0.*",
		"bkwld/croppa": "~3.0",
        "barryvdh/laravel-debugbar": "1.*",
        "mews/purifier": "dev-master"
	},
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/admin.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/core.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/errors.git"
        }
    ],
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-4": {
            "Ipsum\\": "app/modules"
        }
	},
	"scripts": {
        "pre-install-cmd": [
            "php artisan down"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ipsum:update",
            "php artisan up"
        ],
        "pre-update-cmd": [
            "php artisan down"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan ipsum:update",
            "php artisan up"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
