{
	"name": "ipsum/ipsum",
	"description": "The Ipsum Laravel Framework.",
	"keywords": ["framework", "laravel", "ipsum"],
	"license": "MIT",
	"require": {
	    "php": ">=5.4.0",
		"laravel/framework": "4.2.*",
		"d11wtq/boris": "1.0.8",
                "ipsum/core": "dev-master@dev",
		"ipsum/admin": "dev-master@dev",
		"ipsum/errors": "dev-master@dev",
		"bkwld/croppa": "4.0.*",
		"league/flysystem": "1.0.28",
		"barryvdh/laravel-debugbar": "1.*",
		"mews/purifier": "1.0.2",
		"mobiledetect/mobiledetectlib": "2.8"
	},
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/admin.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/core.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/ipsum-laravel/errors.git"
        }
    ],
	"autoload": {
		"classmap": [
			"app/commands",
			"app/database/migrations",
			"app/database/seeds",
			"tests/TestCase.php"
		],
        "psr-4": {
          "App\\": "app"
        }
	},
	"scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
